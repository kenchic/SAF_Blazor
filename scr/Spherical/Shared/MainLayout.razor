<PageTitle>Spherical</PageTitle>

<div class="page">
    <div class="sidebar">
        <AuthorizeView>
            <Authorized>
                <Menu />
            </Authorized>
            <NotAuthorized>
                <LoginControl />
            </NotAuthorized>
        </AuthorizeView>
    </div>

    <main>
        <AuthorizeView>
            <Authorized>
                <div class="top-row px-4">
                    <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
                </div>
                <article class="content px-4">
                    @Body
                </article>
            </Authorized>
            <NotAuthorized>
                No autorizado
            </NotAuthorized>
        </AuthorizeView>
    </main>
</div>